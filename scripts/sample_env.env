# Google Vision OCR
GOOGLE_APPLICATION_CREDENTIALS=gen-lang-client.json
# Optional comma-separated language hints, e.g. "en,es"
VISION_LANGUAGE_HINTS=
# Image MIME type passed to Vision (defaults to image/jpeg)
VISION_MIME_TYPE=image/jpeg

# XAI (AI cleanup)
XAI_API_KEY=sk-xai-xxxxxxxx
XAI_CLEANUP_MODEL=grok-4-fast-reasoning
XAI_BASE_URL=https://api.x.ai/v1

# CLI defaults (override via flags)
UNK_THRESHOLD=65
MAX_CONCURRENCY=3
DRY_RUN=false
VERBOSE=false
KEEP_IMAGES=false
NAME_FALLBACK=Student
OUTPUT_DIR=out

